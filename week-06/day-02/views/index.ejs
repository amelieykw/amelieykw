<% include header.ejs %>
<div class="table-wrapper">
    <% if (books.length > 0) {%>
    <table class="table table-hovered">
        <thead class="thead-dark">
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Title</th>
            </tr>
        </thead>
        <tbody>
            <% books.forEach((book, index) => { %>
            <tr>
                <th scope="row"><%= book.book_id %></th>
                <td><%= book.book_name %></td>
                <!-- <td>
                    <a href="/edit/<%= book.book_id %>" target="_blank" rel="noopener"
                        class="btn btn-sm btn-success">Edit</a>
                    <a href="/delete/<%= book.book_id %>" class="btn btn-sm btn-danger">Delete</a>
                </td> -->
            </tr>
            <% }) %>
        </tbody>
    </table>
    <% } else { %>
    <p class="text-center">No books found. Go <a href="/add">here</a> to add books.</p>
    <% } %>
</div>
</div>
</body>

</html>